<%  layout("/layout/boilerplate.ejs") %>

<div class="row mt-4">
  <div class="col-8 offset-3">
    <h3><%=listendata.title%></h3>
</div>
 <div class="card listening-card col-6 offset-3" >
  <img src="<%=listendata.image.url%>" class="card-img-top show-img" alt="listen-image">
  <div class="card-body">
    
      <%=listendata.description%><br/>
      <%=listendata.price.toLocaleString('en-IN')%><br/>
      <%=listendata.location%><br/>
      <%=listendata.country%><br/>



    </p>
  </div>
</div>
  

   <div class="btns">
     <a href="/listening/<%=listendata._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn"> edit</a>
     <form action="/listening/<%=listendata._id%>?_method=delete" method="post">
            <button class="btn btn-dark offset-5"> delete</button>
        </form>
   </div>
   </div>
  <div class="col-8 offset-3 mb-3">
    <hr>
    <h3>Leave a Review </h3>
    <form action="/listening/<%=listendata._id%>/review" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
         <label class="form-label" for="rating">Rating</label>
      <input class="form-control"type="range" id="rating" min="1" max="5" name="review[rating]">
      </div>
      <div class="mb-3 mt-3">
        <label class="form-label" for="comment">Comments</label>
        <textarea class="form-control" name="review[comment]" id="comment" cols="30" rows="5" required></textarea>
<div class="invalid-feedback">please add some comments for review</div>      
      </div>
      <button class="btn btn-outline-dark">submit</button>
     
    </form>
    <hr>
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listendata.reviews){%>
 <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
        <div class="card-title"><b>Akash modi</b></div>
        <div class="card-text"><%=review.comment%></div>
        <div class="card-text"><%=review.rating%> star</div>
        </div>
        <div class="mt-3">
          <form action="/listening/<%=listendata._id%>/review/<%=review._id%>?_method=delete" class="mb-3" method="post" >
          <button class="btn btn-sm btn-dark">delete</button>
        </form> 
        </div>
        
      </div>
     <% }%>
     
    </div>

  </div>
     
    

<br>